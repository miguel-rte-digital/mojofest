<div class="%s" data-id="%s" data-entity-type="%s">
    <i class="%s"></i>
    <span>%s</span>
    <p class="description">%s</p>
    <div class="fa fa-reorder handle"></div>
    <div class="controls">
        <input type="button" class="button-primary edit" value="Edit" />
        <input type="button" class="button-primary reset" value="Reset to Default" />
        <a href="#" class="remove"><i class="fa fa-times"></i></a>
    </div>
    <div class="options closed">
        <div class="entities-search">
            <div href="#" class="add">
                <input type="text" class="search-text" /><i class="fa fa-search search-button"></i>
                <input type="button" class="add-all" value="Add all" />
                <input type="button" class="remove-all" value="Remove all" />
                <div class="search-entities">
                    <span class="title">Search results</span>
                    <div class="container connected-sortable"></div>
                </div>
            </div>    
            <div class="info">Drop an item below to add it to the live site<br>Drag and drop items to determine the order</div>
            <input type="button" class="add-poi-group" value="Add a new group" />
            <div class="group">
                <div class="group-title-container">
                    <label>Group title:</label><input type="textbox" class="group-title" />
                </div>
                <div class="entities connected-sortable"></div>
            </div>
        </div>
    </div>
</div>