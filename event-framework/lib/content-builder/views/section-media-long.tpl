<div class="%s" data-id="%s" data-entity-type="%s">
    <i class="%s"></i>
    <span>%s</span>
    <p class="description">%s</p>
    <div class="fa fa-reorder handle"></div>
    <div class="controls">
        <input type="button" class="button-primary edit" value="Edit" />
        <input type="button" class="button-primary reset" value="Reset to Default" />
        <a href="#" class="remove"><i class="fa fa-times"></i></a>
    </div>
    <div class="options closed">
        <div class="entities-search">
            <div href="#" class="add">
                <input class="add-media" type="button" value="Add Pictures (press Ctlr or Cmd to select multiple pictures)" />
                <br/>
                or add a video url (Youtube or Vimeo)
                <br/>
                <input type="text" class="video-url" value="" />
                <input class="add-video" type="button" value="Add Video" />
            </div>
            <div class="info"><br/>Drag and drop items to determine the order</div>
            <div class="entities sortable"></div>
        </div>
    </div>
</div>